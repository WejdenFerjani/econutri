{% extends 'base.html.twig' %}

{% block title %}Dashboard Admin - Econutri{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0">
                        <i class="fas fa-tachometer-alt"></i>
                        Tableau de Bord Administrateur
                    </h2>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4 mb-4">
                            <div class="card text-white bg-success">
                                <div class="card-body">
                                    <h5 class="card-title">Utilisateurs</h5>
                                    <p class="card-text display-4">150</p>
                                    <a href="#" class="text-white">Voir détails</a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 mb-4">
                            <div class="card text-white bg-info">
                                <div class="card-body">
                                    <h5 class="card-title">Commandes</h5>
                                    <p class="card-text display-4">42</p>
                                    <a href="#" class="text-white">Voir détails</a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 mb-4">
                            <div class="card text-white bg-warning">
                                <div class="card-body">
                                    <h5 class="card-title">Produits</h5>
                                    <p class="card-text display-4">89</p>
                                    <a href="#" class="text-white">Voir détails</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="mt-4">
                        <h4>Actions rapides</h4>
                        <div class="d-grid gap-2 d-md-flex">
                            <a href="#" class="btn btn-primary me-2">
                                <i class="fas fa-users"></i> Gérer les utilisateurs
                            </a>
                            <a href="#" class="btn btn-success me-2">
                                <i class="fas fa-box"></i> Gérer les produits
                            </a>
                            <a href="{{ path('app_home') }}" class="btn btn-outline-secondary">
                                <i class="fas fa-home"></i> Retour à l'accueil
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}