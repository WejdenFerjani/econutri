<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        
        <!-- Ajoutez Bootstrap et Font Awesome -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
        
        {% block stylesheets %}
            <!-- Lien vers votre CSS moderne -->
            <link rel="stylesheet" href="{{ asset('styles/app.css') }}">
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body>
    <!-- FLASH MESSAGES MODERNES -->
        <div class="flash-messages">
            {% for message in app.flashes('success') %}
                <div class="flash-message success">
                    <div class="flash-icon"><i class="fas fa-check-circle"></i></div>
                    <div class="flash-content">
                        <div class="flash-title">Succès</div>
                        <div class="flash-text">{{ message }}</div>
                    </div>
                    <button class="flash-close" onclick="this.parentElement.remove()">×</button>
                </div>
            {% endfor %}
            
            {% for message in app.flashes('error') %}
                <div class="flash-message error">
                    <div class="flash-icon"><i class="fas fa-exclamation-circle"></i></div>
                    <div class="flash-content">
                        <div class="flash-title">Erreur</div>
                        <div class="flash-text">{{ message }}</div>
                    </div>
                    <button class="flash-close" onclick="this.parentElement.remove()">×</button>
                </div>
            {% endfor %}
            
            {% for message in app.flashes('warning') %}
                <div class="flash-message warning">
                    <div class="flash-icon"><i class="fas fa-exclamation-triangle"></i></div>
                    <div class="flash-content">
                        <div class="flash-title">Attention</div>
                        <div class="flash-text">{{ message }}</div>
                    </div>
                    <button class="flash-close" onclick="this.parentElement.remove()">×</button>
                </div>
            {% endfor %}
            
            {% for message in app.flashes('info') %}
                <div class="flash-message info">
                    <div class="flash-icon"><i class="fas fa-info-circle"></i></div>
                    <div class="flash-content">
                        <div class="flash-title">Information</div>
                        <div class="flash-text">{{ message }}</div>
                    </div>
                    <button class="flash-close" onclick="this.parentElement.remove()">×</button>
                </div>
            {% endfor %}
        </div>
        <!-- Navigation bar -->
        <nav class="navbar navbar-expand-lg navbar-dark bg-success">
            <div class="container">
                <a class="navbar-brand" href="{{ path('app_home') }}">
                    <i class="fas fa-leaf"></i> Econutri
                </a>
                
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        {% if app.user %}
                            <li class="nav-item">
                                <span class="navbar-text text-light me-3">
                                    <i class="fas fa-user"></i> Bonjour {{ app.user.prenom }}
                                </span>
                            </li>
                            {% if is_granted('ROLE_ADMIN') %}
                                <li class="nav-item">
                                    <a href="{{ path('admin_dashboard') }}" class="btn btn-warning btn-sm me-2">
                                        <i class="fas fa-tachometer-alt"></i> Dashboard Admin
                                    </a>
                                </li>
                            {% endif %}
                            <li class="nav-item">
                                <a href="{{ path('app_logout') }}" class="btn btn-outline-light btn-sm">
                                    <i class="fas fa-sign-out-alt"></i> Déconnexion
                                </a>
                            </li>
                        {% else %}
                            <li class="nav-item">
                                <a href="{{ path('app_register') }}" class="btn btn-light btn-sm me-2">
                                    <i class="fas fa-user-plus"></i> S'inscrire
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="{{ path('app_login') }}" class="btn btn-outline-light btn-sm">
                                    <i class="fas fa-sign-in-alt"></i> Se connecter
                                </a>
                            </li>
                        {% endif %}
                    </ul>
                </div>
            </div>
        </nav>

        <!-- Contenu principal -->
        <main>
            {% block body %}{% endblock %}
        </main>

        <!-- Footer -->
        <footer class="bg-dark text-light text-center py-3 mt-5">
            <div class="container">
                <p class="mb-0">&copy; {{ "now"|date("Y") }} Econutri. Tous droits réservés.</p>
            </div>
        </footer>

        <!-- Scripts Bootstrap -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
        
        {% block javascripts_end %}
        {% endblock %}
    </body>
</html>